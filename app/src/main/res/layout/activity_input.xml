<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">


    <TextView
        android:id="@+id/inputText"
        android:layout_width="349dp"
        android:layout_height="55dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="35dp"
        android:text="혈압 혈당 입력하기"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/goback"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="240dp"
        android:background="@drawable/custom_button"
        android:text="뒤로가기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/selectdaybtn"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginStart="225dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_button"
        android:text="날짜선택"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/todaytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/todaytext"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_inputarea"
        android:text="오늘 날짜"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goback"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="255dp"
        android:text="혈압"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todaytext"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/hulapText"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_inputarea"
        android:ems="10"
        android:hint=" 혈압 입력"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="255dp"
        android:text="혈당"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hulapText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/huldangText"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/custom_inputarea"
        android:ems="10"
        android:hint=" 혈당 입력"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/save"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/custom_button"
        android:text="입력 하기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/huldangText"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="90dp"
        android:background="@drawable/select_input"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/gohome"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/gocalender"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/goinput"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="#00FFFFFF" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>